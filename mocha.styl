body {
  margin: 0;
}

#mocha {
  font: 20px/1.5 "Helvetica Neue", Helvetica, Arial, sans-serif;
  margin: 60px 50px;

  .hidden {
    display: none;
  }

  #stats {
    position: absolute;
  }

  @media screen and (max-device-width: 480px) {
    margin: 60px 0;
  }

  & > ul,
  & .suite > ul,
  & .suite {
    margin: 0;
    padding: 0;
  }

  & > ul,
  & .suite > ul {
    list-style: none;
  }

  .suite > h1,
  li.test > h2 {
    margin: 0;
  }

  .suite {
    margin-left: 15px;

    & > h1 {
      font-size: 1em;
      font-weight: 200;
      margin-top: 15px;

      a {
        color: inherit;
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    .suite {
      & > h1 {
        font-size: .8em;
        margin-top: 0;
      }
    }
  }

  li.test {
    margin-left: 15px;
    overflow: hidden;

    /**
    * (1): approximate for browsers not supporting calc
    * (2): 42 = 2*15 + 2*10 + 2*1 (padding + margin + border)
    *      ^^ seriously
    */
    & > pre {
      border: 1px solid #eee;
      border-bottom-color: #ddd;
      border-radius: 3px;
      box-shadow: 0 1px 3px #eee;
      clear: left;
      display: block;
      float: left;
      font: 12px/1.5 monaco, monospace;
      margin: 5px;
      max-width: calc(100% - 42px); /*(2)*/
      padding: 15px;
      word-wrap: break-word;

      code {
        .comment {
          color: #ddd;
        }

        .init {
          color: #2f6fad;
        }

        .string {
          color: #5890ad;
        }

        .keyword {
          color: #8a6343;
        }

        .number {
          color: #2f6fad;
        }
      }
    }

    &:hover {
      & > h2 a.replay {
        opacity: 1;
      }
    }

    &.pass.medium > h2 > .duration {
      background: #c09853;
    }

    &.pass.slow > h2 > .duration {
      background: #b94a48;
    }

    &.pass {
      &::before {
        color: #00d6b2;
        content: '\2713';
        display: block;
        float: left;
        font-size: 12px;
        margin-right: 5px;
      }

      & > h2 > .duration {
        border-radius: 5px;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .2);
        color: #fff;
        font-size: 9px;
        margin-left: 5px;
        padding: 2px 5px;
      }

      &.fast > h2 > .duration {
        display: none;
      }
    }

    &.pending {
      & > pre,
      & > h2 {
        color: #0b97c4;
      }

      &::before {
        color: #0b97c4;
        content: '\25E6';
      }

      &:hover > h2::after {
        content: '(pending)';
        font-family: arial, sans-serif;
      }
    }


    &.fail {
      & > pre,
      & > h2 {
        color: #c00;
      }

      & > pre {
        color: black;

        &.error {
          color: #c00;
          max-height: 300px;
          overflow: auto;
        }
      }

      &::before {
        color: #c00;
        content: '\2716';
        display: block;
        float: left;
        font-size: 12px;
        margin-right: 5px;
      }
    }

    & > html-error {
      border: 1px solid #eee;
      border-bottom-color: #ddd;
      border-radius: 3px;
      box-shadow: 0 1px 3px #eee;
      clear: left;
      color: black;
      display: block;
      float: left;
      font: 12px/1.5 monaco, monospace;
      line-height: 1.5;
      margin: 5px;
      max-height: 300px;
      max-width: calc(100% - 42px); /*(2)*/
      overflow: auto;
      padding: 15px;
      word-wrap: break-word;

      pre.error {
        border: none;
        border-radius: 0;
        box-shadow: 0;
        margin: 0;
        margin-top: 18px;
        max-height: none;
        padding: 0;
      }
    }

    & > h2 {
      cursor: pointer;
      font-size: 12px;
      font-weight: normal;
      position: relative;

      & > a.replay {
        background: #eee;
        border-radius: 15px;
        color: #888;
        display: block;
        font-size: 15px;
        height: 15px;
        line-height: 15px;
        opacity: .3;
        position: absolute;
        right: 0;
        text-align: center;
        text-decoration: none;
        top: 3px;
        transition: opacity 200ms;
        vertical-align: middle;
        width: 15px;
      }
    }
  }
}

#mocha-report {
  &.pass .test.fail {
    display: none;
  }

  &.fail .test.pass {
    display: none;
  }

  &.pending {
    .test.pass,
    .test.fail {
      display: none;
    }

    .test.pass.pending {
      display: block;
    }
  }
}

#mocha-error {
  color: #c00;
  font-size: 1.5em;
  font-weight: 100;
  letter-spacing: 1px;
}

#mocha-stats {
  color: #888;
  font-size: 12px;
  margin: 0;
  position: fixed;
  right: 10px;
  top: 15px;
  z-index: 1;

  .progress {
    background-color: initial;
    box-shadow: none;
    float: right;
    height: auto;
    padding-top: 0;

    /**
    * Set safe initial values, so mochas .progress does not inherit these
    * properties from Bootstrap .progress (which causes .progress height to
    * equal line height set in Bootstrap).
    */
  }

  em {
    color: black;
  }

  a {
    color: inherit;
    text-decoration: none;

    &:hover {
      border-bottom: 1px solid #eee;
    }
  }

  & > li {
    display: inline-block;
    list-style: none;
    margin: 0 5px;
    padding-top: 11px;
  }

  canvas {
    height: 40px;
    width: 40px;
  }
}
